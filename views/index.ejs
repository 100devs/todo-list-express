      <body>
        <!--main section for the content that is displayed-->
        <h1>Todo List:</h1>
        <!--Main title displayed on page-->
        <ul class="todoItems">
          <!--Create unordered list and assign class to the list-->
          <% for(let i=0; i < items.length; i++) {%>
          <!--Use EJS to start a for loop-->
          <li class="item">
            <!--Create list item with a class of item-->
            <% if(items[i].completed === true) {%>
            <!--EJS to check if an item in an array with a completed preperty is true-->
            <span class="completed"><%= items[i].thing %></span>
            <!--Creating an inline element with a class and adding EJS to display the name of the task-->
            <% }else{ %>
            <!--EJS for the else clause of our if statement-->
            <span><%= items[i].thing %></span>
            <!--Creating an inline element and EJS to display the name of the task-->
            <% } %>
            <!--EJS to close out else statement-->
            <span class="fa fa-trash"></span>
            <!--Display Found Awesome Icon of trash can inside span-->
          </li>
          <!--Closing out list item-->
          <% } %>
          <!--EJS to close for loop-->
        </ul>
        <!--Closing our unordered list-->

        <h2>Left to do: <%= left %></h2>
        <!--Creating a second level heading tag with text and using EJS to display  a variable showing the number of tasks left to complete-->

        <h2>Add A Todo:</h2>
        <!--Create a second level header-->

        <form action="/addTodo" method="POST">
          <!--Create a form with a post method that goes to the /addTodo route-->
          <input type="text" placeholder="Thing To Do" name="todoItem" />
          <!--Create text input box with default text inside of it before user types in it and assigns a name for later reference-->
          <input type="submit" />
          <!--Gives the form a submit button-->
        </form>
        <!--Closing the form tag-->

        <script src="js/main.js"></script>
        <!--Linking the main.js file in the JS folder in the public folder-->
      </body>
      <!--Closing the body tag-->
    </html>
    <!--Closing the html tag-->
  </body>
