    <!DOCTYPE html> <!-- typo -->
<html lang="en"> <!-- typo -->
<head> <!-- typo -->
    <meta charset="UTF-8"> <!-- typo -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge"> <!-- typo -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- typo -->
    <title>Document</title> <!-- typo -->
</head> <!-- typo -->
<body>  <!-- main section for content displayed -->
    <h1>Todo List: </h1> <!-- main title  -->
    <ul class="todoItems"> <!-- create unordered list and assign class to list -->
    <% for(let i=0; i < items.length; i++) {%> <!-- use EJS to start a for loop -->
        <li class="item"> <!-- create a list item with a class name of 'item' -->
            <% if(items[i].completed === true) {%> <!-- EJS to check if an item in an array with a 'completed' property is true -->
                <span class='completed'><%= items[i].thing %></span> <!-- creating an inline element with a class and adding EJS to display the name of the task called 'thing' property -->
            <% }else{ %> <!-- EJS for the else clause of our if statement -->
                <span><%= items[i].thing %></span> <!-- adding EJS to display the name of the task called 'thing' property with no class -->
            <% } %>  <!-- close EJS if else statement -->
            <span class='fa fa-trash'></span> <!-- create a span with a class called 'fa fa-trash' that will display a font awesome icone of a trash can-->
        </li> <!-- closing list item -->
    <% } %> <!-- EJS to close the for loop -->
    </ul> <!-- closing unordered list -->

    <h2>Left to do: <%= left %></h2> <!-- create a second level heading tag with text and using EJS to display a variable showing how many
    tasks are left to complete -->

    <h2>Add A Todo:</h2> <!-- create a second level header -->

    <form action="/addTodo" method="POST"> <!-- create a form with a 'POST' method that will go to the '/addTodo' route to create the new task -->
        <input type="text" placeholder="Thing To Do" name="todoItem"> <!-- create an input box that accepts text and displays default 'Thing To Do' text and has a 
            name of 'todoItem' -->
        <input type="submit"> <!-- gives the form a submit button -->
    </form> <!-- closing form tag -->
    

    <script src='js/main.js'></script> <!-- linking to main.js file inside the js folder in the public folder-->
</body> <!-- close body tag -->
</html> <!-- close html tag -->
