<!-- Open body -->
<body>
    <!-- Main page header -->
    <h1>Todo List: </h1>
    <!-- Open unordered list for items to be added to -->
    <ul class="todoItems">
    <!-- Loop through items, from 0 up to items.length -->
    <% for(let i=0; i < items.length; i++) {%>
        <!-- Open a list item, class item -->
        <li class="item">
            <!-- Checks if completed is true for this item -->
            <% if(items[i].completed === true) {%>
                <!-- If true, creates span with class completed containing that item's thing -->
                <span class='completed'><%= items[i].thing %></span>
            <!-- If not true -->
            <% }else{ %>
                <!-- Creates a clasless span with the the thing -->
                <span><%= items[i].thing %></span>
            <!-- Close out if/else -->
            <% } %>    
            <!-- Create a trashcan icon -->
            <span class='fa fa-trash'></span>
        <!-- Close out list item -->
        </li>
    <!-- close out for loop -->
    <% } %>
    <!-- close out unordered list -->
    </ul>
    <!-- Header containing the number of items left to do, left is supplied by the server -->
    <h2>Left to do: <%= left %></h2>
    <!-- Header labeling the form -->
    <h2>Add A Todo:</h2>
    <!-- Open a form that posts an item to the path /addTodo -->
    <form action="/addTodo" method="POST">
        <!-- Create an input taking text -->
        <input type="text" placeholder="Thing To Do" name="todoItem">
        <!-- Create a button to submit the item -->
        <input type="submit">
    <!-- Close the form -->
    </form>
    
    <!-- Link to main.js for Javascript -->
    <script src='js/main.js'></script>
<!-- Close the body -->
</body>
<!-- Close the html -->
</html>
