<body>  <!-- Main section for content to be displayed-->
    <h1>Todo List: </h1> <!-- Main title Header displayed on page -->
    <ul class="todoItems"> <!-- Create unordered list and assign class to the list-->
        <!-- Run a for loop, with ejs, as many times as the items inside 'items' -->
    <% for(let i=0; i < items.length; i++) {%>
        <li class="item"> <!-- Create an line item for each iteration , with class 'item' -->
            <!-- Check if the item is completed, create a paragraph with class of 'completed' -->
            <% if(items[i].completed === true) {%>
                <span class='completed'><%= items[i].thing %></span> <!--Create span with a class 'completed' and adding EJS to display the name of the the task -->
            <% }else{ %> <!--EJS for the Else clause of the 'if' statement-->
                <!-- Create the item with no class  -->
                <p><%= items[i].thing %></p>
            <% } %> <!--close the else statement-->
               <!-- Create a span that is a fontawesome icon of a trash can -->
            <span class='fa fa-trash'></span>
        </li> <!--Close list item-->
    <% } %> <!--ejs tp close the for loop-->
    </ul> <!--close the unordered list-->

    
    <h2>Left to do: <%= left %></h2> <!-- Lvl 2 Header showing how many items are left todo using EJS-->

    <h2>Add A Todo:</h2> <!--Create a second Lvl 2 Header -->
    <form action="/addTodo" method="POST"> <!-- Form that sends a POST request to the route /addTodo -->
        <input type="text" placeholder="Thing To Do" name="todoItem"> <!-- input field that takes the todo item, and sends it to the server under the name of "todoItem" -->
       
        <input type="submit"> <!-- simple submit input -->
    </form> <!--Close the form tag-->
    
    
    <script src='js/main.js'></script> <!-- Script tag that links main.js file in the public folder to ejs file -->
</body> <!--Close the body tag-->
</html> <!--close the html tag-->
