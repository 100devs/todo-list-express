    <meta http-equiv="X-UA-Compatible" content="IE=edge"> <!-- set the  -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- define the viewport size -->
    <title>Document</title> <!-- Give the page the title Document -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"> <!--import the font-awesome icons for the fa, and fa-trash classes-->
