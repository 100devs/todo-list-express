<body> <!-- main section for content displayed -->
    <h1>Todo List: </h1> <!--Main title displayed on page-->
    <ul class="todoItems"> <!--Create unordered list and assign class to list -->
    <% for(let i=0; i < items.length; i++) {%> <!-- Use EJS to start a for loop -->
        <li class="item"> <!--Create a list item with a class -->
            <% if(items[i].completed === true) {%> <!--EJS to check if an item in an array with completed property is true -->
                <span class='completed'><%= items[i].thing %></span> <!--Create an inline element with a class and adding EJS to display the name of the task-->
            <% }else{ %> <!--EJS for the else clause of our if statement-->
                <span><%= items[i].thing %></span> <!--Adding EJS to display the name of the task with NO CLASS-->
            <% } %>   <!--EJS to close else statement-->
            <span class='fa fa-trash'></span> <!--Creating a span with a class to show a font awesome icon-->
        </li> <!--Closing list item-->
    <% } %> <!--Closing EJS for loop-->
    </ul> <!--Closing our unordered list-->

    <h2>Left to do: <%= left %></h2> <!--Creating a second level heading tag with text and using EJS to display a variable showing how many tasks are left to complete-->

    <h2>Add A Todo:</h2> <!--Creating a second level heading tag with text-->

    <form action="/addTodo" method="POST"> <!--Creating a form with a POST method is submitted to the route noted in the action-->
        <input type="text" placeholder="Thing To Do" name="todoItem"> <!--Creating an input box for text with a placeholder and a name for later reference-->
        <input type="submit"> <!--Creating an form submit button-->
    </form> <!--Closing the form tag-->
    

    <script src='js/main.js'></script> <!--Linking to main JS file located in the public folder-->
</body><!--Closing body tag-->
</html><!--Closing html tag-->
