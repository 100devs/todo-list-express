  <body>
    <h1>Todo List:</h1>
    <ul class="todoItems">
      <!-- running a for loop as many times as the items inside 'items' -->
      <% for(let i=0; i < items.length; i++) {%>
      <!-- creating an li for each iteration , with class 'item' -->
      <li class="item">
        <!-- if the item is complted ,create a p with class of 'completed' -->
        <% if(items[i].completed === true) {%>
        <p class="completed"><%= items[i].thing %></p>
        <% }else{ %>
        <!-- else just create the item with a class -->
        <p><%= items[i].thing %></p>
        <% } %>
        <!-- create a span that is actually a fontawesome icon ofa trashcan -->
        <span class="fa fa-trash"></span>
      </li>
      <% } %>
    </ul>
    <!-- creating a h2 to display how many todo items ae left. the 'left ' variab;e comes to EJS from theserver  -->
    <h2>Left to do: <%= left %></h2>

    <h2>Add A Todo:</h2>
    <!-- form that send a  POST request to the route /addToDo -->
    <form action="/addTodo" method="POST">
      <!-- an input field that takes the todo item and dends it to the server under the name of 'todoItem' -->
      <input type="text" placeholder="Thing To Do" name="todoItem" />
      <!--  a simple submit input -->
      <input type="submit" />
    </form>
    <!-- liinking ti js file -->
    <script src="js/main.js"></script>
  </body>
