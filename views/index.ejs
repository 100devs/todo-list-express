<body> <!--main section for content displayed--> 
    <h1>Todo List: </h1> <!--main title displayed on page-->
    <ul class="todoItems"><!--Create unordered list and assign class to the list -->
    <% for(let i=0; i < items.length; i++) {%> <!--Use ejs to start a for loop-->
        <li class="item"> <!--create a list item with a class of item-->
            <% if(items[i].completed === true) {%> <!--ejs to check if an item in an array with a completed propperty is true-->
                <span class='completed'><%= items[i].thing %></span> <!--Creating an inline element with a class and adding ejs to display the name of the task-->
            <% }else{ %> <!--EJS for else clause of if statement-->
                <span><%= items[i].thing %></span> <!--create an inline element and display the name of the task -->
            <% } %>    <!--EJS closing tage for else statement -->
            <span class='fa fa-trash'></span> <!--create an inline element with a class (displays our trash icon)-->
        </li> <!--closing tage for list item-->
    <% } %> <!--ejs closing bracket for  for loop  -->
    </ul> <!-- closing tag for unordered list-->

    <h2>Left to do: <%= left %></h2> <!--create an h2 with tasks left to do.  then using EJS to display tasks left (left)-->

    <h2>Add A Todo:</h2> <!-- create an h2 -->

    <form action="/addTodo" method="POST">  <!-- create a form with a post method that will go to /addTodo route -->
        <input type="text" placeholder="Thing To Do" name="todoItem"> <!--creating a text input, displays a placeholder text of Thing To Do and giving it a name of todoItem for later reference -->
        <input type="submit"> <!--Gives the form a Submit button-->
    </form> <!--close the form tag-->
    

    <script src='js/main.js'></script> <!--links to the main.js file in the js folder in the public folder-->
</body> <!--closing body tag-->
</html> <!--closing html tag-->
