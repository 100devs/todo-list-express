  <body>
    <!-- main section for content to be displayed -->
    <h1>Todo List:</h1> <!-- title of the page -->
    <ul class="todoItems"> <!-- list of todo items -->
      <% for(let i=0; i < items.length; i++) {%> <!-- loop through the items -->
      <li class="item"> <!-- list item -->
        <% if(items[i].completed === true) {%> <!-- if the item is completed -->
        <span class="completed"><%= items[i].thing %></span> <!-- display the item -->
        <% }else{ %> <!-- if the item is not completed -->
        <span><%= items[i].thing %></span> <!-- display the item -->
        <% } %> <!-- end if -->
        <span class="fa fa-trash"></span> <!-- delete button -->
      </li> <!-- end list item -->
      <% } %> <!-- end loop -->
    </ul> <!-- end list of todo items -->

    <h2>Left to do: <%= left %></h2> <!-- number of items left to do -->

    <h2>Add A Todo:</h2> <!-- title of the form -->

    <form action="/addTodo" method="POST"> <!-- form to add a todo item -->
      <input type="text" placeholder="Thing To Do" name="todoItem" /> <!-- text input for the todo item -->
      <input type="submit" /> <!-- submit button -->
    </form> <!-- end form -->

    <script src="js/main.js"></script> <!-- main javascript file -->
  </body> <!-- end body -->
