<body> <!-- The main section of an HTML document -->
    <h1>Todo List: </h1> <!-- Title for the app -->
    <ul class="todoItems"> <!-- An unordered list -->
    <% for(let i=0; i < items.length; i++) {%> <!-- Render each item of the items variable passed in the server's response to the client's GET request until there are no more items -->
        <li class="item"> <!-- Begin the list item -->
            <% if(items[i].completed === true) {%> <!-- If the item being rendered has the completed property with a true value, give it the class "completed"-->
                <span class='completed'><%= items[i].thing %></span> <!-- Show the item description inside the span -->
            <% }else{ %> <!-- If the item being rendered does not have the completed property with a true value -->
                <span><%= items[i].thing %></span> <!-- Render the description without the extra class to format it -->
            <% } %>    
            <span class='fa fa-trash'></span> <!-- A font awesome trashcan icon -->
        </li> <!-- End of the list item -->
    <% } %> <!-- Close the for loop -->
    </ul> <!-- End unordered list -->

    <h2>Left to do: <%= left %></h2> <!-- Show the number of todo items with complete set to false, which is returned from the initial GET request to the server -->

    <h2>Add A Todo:</h2> <!-- Secondary title -->

    <form action="/addTodo" method="POST"> <!-- When submit is clicked, send a post request to the URL/addTodo. -->
        <input type="text" placeholder="Thing To Do" name="todoItem"> <!-- Text field in the body of the request containing todoItem: [user text] -->
        <input type="submit"> <!-- Send the request -->
    </form> <!-- End of form -->
    

    <script src='js/main.js'></script> <!-- Apply scripts to this HTML document -->
</body> <!-- End of the body -->
</html> <!-- End of the HTML document -->
