<body> <!-- main section for content to be displayed -->
    <h1>Todo List: </h1> <!-- main title displayed on page -->
    <ul class="todoItems"> <!-- creating an unordered list and assign class to the list -->
    <% for(let i=0; i < items.length; i++) {%> <!-- EJS for loop -->
        <li class="item"> <!-- creating a list item with a class of item -->
            <% if(items[i].completed === true) {%> <!-- EJS conditional if completed is true -->
                <span class='completed'><%= items[i].thing %></span> <!-- creating an inline element with a class, containing thing(task), if completed is true -->
            <% }else{ %> <!-- EJS for the else clause of our if statement -->
                <span><%= items[i].thing %></span> <!-- adding EJS to display name of the task (no class this time)-->
            <% } %> <!-- EJS to close the else statement -->
            <span class='fa fa-trash'></span> <!-- display font awesome icon of trash can inside a span -->
        </li> <!-- closing our list item -->
    <% } %> <!-- closing ou EJS for loop -->
    </ul> <!-- closing our unordered list -->

    <h2>Left to do: <%= left %></h2> <!-- creates a second level heading with text and using EJS to display showing how many tasks are left to complete -->

    <h2>Add A Todo:</h2> <!-- creates a second level heading -->

    <form action="/addTodo" method="POST"> <!-- creates a form (to input info) with a method of POST, that goes to the route of /addTodo-->
        <input type="text" placeholder="Thing To Do" name="todoItem"> <!-- input with a type of text (box that accepts text), placeholder (appears in the input as default), with a name to be used for later reference -->
        <input type="submit"> <!-- input with a type of submit (user clicks this to add input)-->
    </form> <!-- closing our form -->
    

    <script src='js/main.js'></script> <!-- linking to our client side javascript, in the js folder in the public folder -->
</body> <!-- closing out our body tag -->
</html> <!-- closing out our html tag -->
