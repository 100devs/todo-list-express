<!-- tells browser what type of document this is -->
<!DOCTYPE html>
<!-- starts html with opening tag and shows what language it is -->
<html lang="en">
     <!-- opening head tag for metadata -->
     <head>
          <!-- defines what character set should be used  -->
          <meta charset="UTF-8" />
          <!-- compatibility with microsoft browsers -->
          <meta http-equiv="X-UA-Compatible" content="IE=edge" />
          <!-- sets width of viewport to the width of the device -->
          <meta
               name="viewport"
               content="width=device-width, initial-scale=1.0"
          />
          <!-- sets title and shows it in the browsers tab -->
          <title>Document</title>
          <!-- links font awesome icon library -->
          <link
               rel="stylesheet"
               href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
          />
          <!-- links our stylesheet -->
          <link rel="stylesheet" href="css/style.css" />
          <!-- closing head tag -->
     </head>
