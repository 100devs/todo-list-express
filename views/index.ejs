<!-- Specifes to browsers that the latest HTML specification is being followed, disables quirks mode -->
<!DOCTYPE html>
<!-- Declare document language as `en` -->
<html lang="en">
<head>
    <!-- Declare character encoding as `UTF-8` -->
    <meta charset="UTF-8">
    <!-- Tell MS browsers which version of Internet Explorer the document should be rendered as (Edge)-->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Declare the width and initial scale (zoom level) of the viewport, as the full width of the device and 1.0 accordingly -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Declare the document title (for title bar/bookmarks) -->
    <title>Document</title>
    <!-- Reference link to Font Awesome stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!-- Reference link to the local stylesheet -->
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>Todo List: </h1>
    <!-- Unordered list with a class of `todoItems` -->
    <ul class="todoItems">
    <!-- For loop that loops through every object in the `items` array -->
    <% for(let i=0; i < items.length; i++) {%>
        <li class="item">
            <% if(items[i].completed === true) {%>
                <span class='completed'><%= items[i].thing %></span>
            <% }else{ %>
                <span><%= items[i].thing %></span>
            <% } %>    
            <span class='fa fa-trash'></span>
        </li>
    <% } %>
    </ul>

    <h2>Left to do: <%= left %></h2>

    <!-- Output the value of 'left' into the page -->
    <h2>Add A Todo:</h2>

    <!-- Create a form that will make a `POST` request to `/addTodo` when submitted -->
    <form action="/addTodo" method="POST">
        <!-- Set text input field with `placeholder` of `Thing To Do` and `name` of `todoItem`, which will become the key when the value is transmitted -->
        <input type="text" placeholder="Thing To Do" name="todoItem">
        <!-- Submit button -->
        <input type="submit">
    </form>
    
    <!-- Link to local JavaScript file -->
    <script src='js/main.js'></script>
</body>
</html>
