  <body>
    <!DOCTYPE html>
    <!-- potentially a typo -->
    <html lang="en">
      <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
      </head>
      <!-- potentially a typo -->
      <body>
        <!--Main section for content displayed-->
        <h1>Todo List:</h1>
        <!-- the main heading on the page-->
        <ul class="todoItems">
          <!-- unordered list, creating a class called todoItems-->
          <% for(let i=0; i < items.length; i++) {%>
          <!-- use EJS to start a for loop-->
          <!-- for loop that runs through the array -->
          <li class="item">
            <!--create a list item with a class of item-->
            <% if(items[i].completed === true) {%>
            <!-- EJS to check if an item in an array with a completed property is true-->
            <!-- this also causes the strikethrough via CSS -->
            <span class="completed"><%= items[i].thing %></span>
            <!--Create an inline element with a class, and add EJS to display the name of the task (if it fulfills the condition!)-->
            <% }else{ %>
            <!--EJS for the Else clause of our if statement> -->
            <span><%= items[i].thing %></span>
            <!-- adding EJS to display name of the task with NO CLASS-->
            <% } %>
            <!-- EJS to close the Else Statement-->
            <span class="fa fa-trash"></span>
            <!-- display font awesome icon of trash inside a span-->
          </li>
          <!-- close our list item-->
          <% } %>
          <!-- EJS to close our FOR loop-->
        </ul>
        <!-- close our unordered list-->

        <h2>Left to do: <%= left %></h2>
        <!-- creates a second level heading tag with text and usign EJS to display a variable showing how many 
    tasks are left to complete-->

        <h2>Add A Todo:</h2>
        <!-- create a second level header-->

        <form action="/addTodo" method="POST">
          <!-- create a form with a POST method that goes to the /addTodo route-->
          <input type="text" placeholder="Thing To Do" name="todoItem" />
          <!-- create an iput box that accepts text with default text inside
        of it before you type anything, inoput box is given a name for later reference-->
          <input type="submit" />
          <!-- Gives the form a submit button-->
        </form>
        <!-- close our form tag-->

        <script src="js/main.js"></script>
        <!-- links tot he main.js files in the js folder in the public folder-->
      </body>
      <!-- close body tag-->
    </html>
    <!-- close html tag-->
  </body>
</html>
