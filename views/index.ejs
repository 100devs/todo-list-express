<body>                                                                      <!--Main section for the content to be displayed-->
    <h1>Todo List: </h1>                                                    <!--Main title displayed on page-->
    <ul class="todoItems">                                                  <!--unordered list & assign class todo items-->
    <% for(let i=0; i < items.length; i++) {%>                              <!--Use EJS to start a for loop-->
        <li class="item">                                                   <!--list item with a class of 'item'-->
            <% if(items[i].completed === true) {%>                          <!--EJS to check if an item in an array with a completed property is true-->
                <span class='completed'><%= items[i].thing %></span>        <!--Creating an inline element with a class and adding EJS to display the name of the task -->
            <% }else{ %>                                                    <!--EJS for the else clause of our if statement -->
                <span><%= items[i].thing %></span>                          <!--adding EJS to display the name of the task with NO CLASS -->
            <% } %>                                                         <!--EJS to close else statement -->
            <span class='fa fa-trash'></span>                               <!--creating a span to hold the trash can icon -->
        </li>                                                               <!--close list item -->
    <% } %>                                                                 <!--closing EJS for loop -->
    </ul>                                                                   <!--closing unordered list -->

    <h2>Left to do: <%= left %></h2>                                        <!--Creates a second level heading using EJS to display a variable showing how makny tasks are left to complete-->

    <h2>Add A Todo:</h2>                                                    <!--Create a second level header -->

    <form action="/addTodo" method="POST">                                  <!--Create a form with a POST method that goes to the /addTodo route -->
        <input type="text" placeholder="Thing To Do" name="todoItem">       <!--creating an input box that accepts text with default text within, named 'todoItem' for reference it later-->
        <input type="submit">                                               <!--give the form a submit button -->
    </form>                                                                 <!--close the form tag-->
    

    <script src='js/main.js'></script>                                      <!--link to the main.js file in the js folder, inside public folder-->
</body>                                                                     <!--closing body tag-->
</html>                                                                     <!--close html tag-->
