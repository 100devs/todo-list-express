<body> <!--setting where the body starts, main section of content being displayed-->
    <h1>Todo List: </h1> <!-- main title display -->
    <ul class="todoItems"> <!-- create unordered list and assign the class todoItems to the list-->
    <% for(let i=0; i < items.length; i++) {%> <!-- ejs for loop to populate the list from the database-->
        <li class="item"> <!-- sets a new list item to be filled in from the database, sets its class to item -->
            <% if(items[i].completed === true) {%> <!-- reads state of completed parameter, if it's true, then do below -->
                <span class='completed'><%= items[i].thing %></span> <!-- sets item class to completed and posts the item as a span -->
            <% }else{ %> <!--if "completed" isn't true, does below -->
                <span><%= items[i].thing %></span> <!-- posts item as span, not as part of the completed class -->
            <% } %>    <!-- ejs close curly brace for if else statement-->
            <span class='fa fa-trash'></span> <!-- font awesome trashcan in a span -->
        </li> <!-- end of list item -->
    <% } %> <!-- closing curly brace for for loop-->
    </ul> <!-- end of unordered list -->

    <h2>Left to do: <%= left %></h2> <!-- display number of uncompleted tasks -->

    <h2>Add A Todo:</h2> <!-- instructions to add a todo -->

    <form action="/addTodo" method="POST"> <!-- create a form using the POST method going to the /addTodo route -->
        <input type="text" placeholder="Thing To Do" name="todoItem"><!-- create text box input-->
        <input type="submit"> <!-- create submit button-->
    </form> <!-- ends the form-->
    

    <script src='js/main.js'></script> <!-- points to main javascript file -->
</body><!-- closes body -->
</html><!-- closes html -->
