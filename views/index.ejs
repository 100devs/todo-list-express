<!--Signifies that this is indeed an HTML (like) document-->
<!DOCTYPE html>
<!--Sets the language to english-->
<html lang="en">
<!--Contains machine readable information-->    
<head>
    <!--Encodes all characters of the web-->
    <meta charset="UTF-8">
    <!--Allows authors to choose which version of IE the page should be rendered in -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!--Allows a preset look of how the UI should look screen wise-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Name of the document-->
    <title>Document</title>
    <!--Font Awesome library which allows for us to see the different icons being used in the document-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!--Links to the actual stylesheet for font and page styling-->
    <link rel="stylesheet" href="css/style.css">
    <!--End portion of the head section-->
</head>
<!--Used to define the body of the document-->
<body>
    <!--Heading of the document-->
    <h1>Todo List: </h1>
    <!--Un ordered list of items that is given the class name of "todoItems"-->
    <ul class="todoItems">
    <!---->
    <% for(let i=0; i < items.length; i++) {%>
        <li class="item">
            <% if(items[i].completed === true) {%>
                <span class='completed'><%= items[i].thing %></span>
            <% }else{ %>
                <span><%= items[i].thing %></span>
            <% } %>    
            <span class='fa fa-trash'></span>
        </li>
    <% } %>
    </ul>

    <h2>Left to do: <%= left %></h2>

    <h2>Add A Todo:</h2>

    <form action="/addTodo" method="POST">
        <input type="text" placeholder="Thing To Do" name="todoItem">
        <input type="submit">
    </form>
    

    <script src='js/main.js'></script>
</body>
</html>
