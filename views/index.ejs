  <body>
    <!--start of the body-->
    <!DOCTYPE html>
    <!-- Duplicate Code -->
    <html lang="en">
      <!--Duplicate Code-->
      <head>
        <!-- Duplicate Code -->
        <meta charset="UTF-8" />
        <!-- Duplicate Code -->
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!-- Duplicate Code -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- Duplicate Code -->
        <title>Document</title>
        <!-- Duplicate Code --></head
      ><!-- Duplicate Code -->
      <body>
        <!--Start of Body-->
        <h1>Todo List:</h1>
        <!--Used for Most Important Text on Screen -->
        <ul class="todoItems">
          <!--creating an unordered list called todoitems -->
          <% for(let i=0; i < items.length; i++) {%>
          <!--starting a for loop in ejs -->
          <li class="item">
            <!--create a list item and assigning a class of "item" -->
            <% if(items[i].completed === true) {%>
            <!--check if an item in an array with a completed property is true -->
            <span class="completed"><%= items[i].thing %></span>
            <!--creating an element and adding EJS to display the name of the task(pulling out specific items out of the array) -->
            <% }else{ %><!--EJS for the ELSE of our IF statement -->
            <span><%= items[i].thing %></span>
            <!--adding EJS to display the name of the task with NO CLASS(pulling out specific items out of the array) -->
            <% } %>
            <!--close ELSE statement-->
            <span class="fa fa-trash"></span>
            <!--font awesome icon of trash can-->
          </li>
          <!--closing the list item-->
          <% } %>
          <!--close the FOR loop-->
        </ul>
        <!--close of unordered list-->

        <h2>Left to do: <%= left %></h2>
        <!--Create a second level heading tag with text and using EJS to display the number of tasks left to complete-->

        <h2>Add A Todo:</h2>
        <!--Create a second level heading tag with text-->

        <form action="/addTodo" method="POST">
          <!--creates a form with a POST method that goes to the /addTodo route-->
          <input type="text" placeholder="Thing To Do" name="todoItem" />
          <!--create an input box that accepts with default text inside of it before you type anything. the input box is given a name for later reference-->
          <input type="submit" /><!--gives the form a SUBMIT button-->
        </form>
        <!--close the form-->
        <script src="js/main.js"></script>
        <!--links the javascript file-->
      </body>
      <!--end of body element-->
    </html>
    <!--end of the doc/HTML-->
  </body>
</html>
