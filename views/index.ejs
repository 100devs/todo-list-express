<body> <!-- begin the body section -->
    <h1>Todo List: </h1> <!-- Main header is Todo List: -->
    <ul class="todoItems"> <!-- create unordered list with class todoItems -->
    <% for(let i=0; i < items.length; i++) {%> <!-- iterate over the items so we can display them eventually -->
        <li class="item"> <!-- define a new list element with class item -->
            <% if(items[i].completed === true) {%> <!-- if the item is complete -->
                <span class='completed'><%= items[i].thing %></span> <!--give it the class completed and display the text in a span -->
            <% }else{ %> <!--otherwise -->
                <span><%= items[i].thing %></span> <!--just display it as a span inside the <li></li> -->
            <% } %>    <!-- end of else -->
            <span class='fa fa-trash'></span> <!-- add the trash can icon used for deleting items -->
        </li> <!-- end the list item -->
    <% } %><!-- end of the for loop -->
    </ul> <!--end the unordered list -->

    <h2>Left to do: <%= left %></h2> <!--secondary header displyaing how many items are left-->

    <h2>Add A Todo:</h2> <!-- secondary header for adding items -->

    <form action="/addTodo" method="POST"> <!-- form that makes a post request to addTodo when submitted -->
        <input type="text" placeholder="Thing To Do" name="todoItem"> <!--the text of the thing to do -->
        <input type="submit"> <!--submit button -->
    </form> <!--end of form -->
    

    <script src='js/main.js'></script> <!-- embed our main.js script here so nothing blocking happens until the page is basically already finished rendering everything the user might see -->
</body> <!--end the html body -->
</html> <!--end of html -->
