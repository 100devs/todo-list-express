<body> <!-- MAIN SECTION FOR CONTENT TO BE DISPLAYED -->
    <h1>Todo List: </h1> <!-- MAIN TITLE ON PAGE -->
    <ul class="todoItems"> <!-- UNORDERED LIST WITH A CLASS ASSIGNED -->
    <% for(let i=0; i < items.length; i++) {%> <!-- EMBEDDED JAVASCRIPT WITH FOR LOOP -->
        <li class="item"> <!-- LIST ITEM WITH A CLASS ASSIGNED -->
            <% if(items[i].completed === true) {%> <!-- EMBEDDED JAVASCRIPT WITH AN IF STATEMENT COMPLETED PROPERTY EQUALS TRUE -->
                <span class='completed'>    </span> <!-- INLINE ELEMENT WITH A CLASS ASSIGNED -->
            <% }else{ %> <!-- EMBEDDED JAVASCRIPT ELSE CLAUSE OF OUR IF STATEMENT -->
                <span><%= items[i].thing %></span> <!-- EMBEDDED JAVASCRIPT DISPLAY NAME OF TASK -->
            <% } %>    <!-- EMBEDDED JAVASCRIPT CLOSES THE STATEMENT -->
            <span class='fa fa-trash'></span> <!-- INLINE ELEMENT WITH CLASS ASSIGNED FOR ICONS -->
        </li> <!-- CLOSING LIST ITEM  -->
    <% } %> <!-- EMBEDDED JAVASCRIPT CLOSING FOR LOOP -->
    </ul> <!-- UNORDERED LIST CLOSING TAG  -->

    <h2>Left to do: <%= left %></h2> <!-- HEADER ELEMENT WITH EMBEDDED JAVASCRIPT DISPLAY TASKS REMAINING -->

    <h2>Add A Todo:</h2> <!-- HEADER ELEMENT SECOND LEVEL TITLE -->

    <form action="/addTodo" method="POST"> <!-- FORM ELEMENT WITH A POST METHOD /addTodo -->
        <input type="text" placeholder="Thing To Do" name="todoItem"> <!-- INPUT ELEMENT FOR TEXT LIST OF TASKS -->
        <input type="submit"> <!-- INPUT ELEMENT WITH TYPE OF SUBMIT BUTTON  -->
    </form> <!-- FORM ELENENT CLOSING TAG -->
    

    <script src='js/main.js'></script> <!-- CLIENT SIDE JAVASCRIPT LOCATION -->
</body> <!-- BODY ELEMENT CLOSING TAG -->
</html> <!-- HTML ELEMENT CLOSING TAG -->
