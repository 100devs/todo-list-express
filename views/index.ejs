<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <div class="container">
      <main>
        <div class="list-container">
          <!-- Data is loaded dynamically in this template -->
          <h1>Todo List:</h1>
          <ul class="todoItems">
            <!-- For loop for displaying each item in the todo list -->
            <% for(let i=0; i < items.length; i++) {%> 
              <% if(items[i].completed
            === true) {%>
            <li class="item done">
              <span completed><%= items[i].thing %></span>
            <% }else{ %>

            <li class="item">
              <span incomplete><%= items[i].thing %></span>
              <% } %>
              <span class="fa fa-trash"></span>
            </li>
            <% } %>
          </ul>
        </div>

        <h2>Left to do: <%= left %></h2>
        <div class="form-container">
          <h2>Add A Todo:</h2>

          <!-- Form to add a new item to the todo list -->
          <form action="/addTodo" method="POST">
            <input type="text" placeholder="Thing To Do" name="todoItem" />
            <input id="submit" type="submit" />
          </form>
        </div>

        <script src="js/main.js"></script>
      </main>
    </div>
  </body>
</html>
