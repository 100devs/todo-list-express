<body> <!-- body of the document (what's generally rendered) -->
    <h1>Todo List: </h1> <!-- most important text, contains a title -->
    <ul class="todoItems"> <!-- create an (u)nordered (l)ist of class todoItems -->
    <% for(let i=0; i < items.length; i++) {%> <!-- this injects javascript using ejs into html, which by itself does not allow javascript. this iterates a function over the length of items -->
        <li class="item"> <!-- create a new html list item under the unordered list with the class item -->
            <% if(items[i].completed === true) {%> <!-- if the item has the completed attribute -->
                <span class='completed'><%= items[i].thing %></span> <!-- write it in a completed class span (so that we can attach a css strikethrough)-->
            <% }else{ %> <!-- else -->
                <span><%= items[i].thing %></span> <!-- write it in an unclassed span -->
            <% } %>    <!-- close the ejs function -->
            <span class='fa fa-trash'></span> <!-- and a span with classes fa and fa-trash (so we can inject the font awesome icons) -->
        </li> <!-- complete the list item -->
    <% } %> <!-- close the ejs function -->
    </ul> <!-- close the unorder list -->

    <h2>Left to do: <%= left %></h2> <!-- second most important text, injects variable of how many items are left to do -->

    <h2>Add A Todo:</h2> <!-- second most important text, heading for the form -->

    <form action="/addTodo" method="POST"> <!-- create a new form that POSTs to the server to the route /addTodo -->
        <input type="text" placeholder="Thing To Do" name="todoItem"> <!-- create a text input with the default text "Thing To Do" and labeled todoItem  -->
        <input type="submit"> <!-- create a submit button -->
    </form> <!-- close the form -->
    

    <script src='js/main.js'></script> <!-- load javascript from this location -->
</body> <!-- close body -->
</html> <!-- close html -->
