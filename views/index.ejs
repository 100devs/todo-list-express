    <h1>Todo List: </h1> <!-- most important heading displayed on the page -->
    <ul class="todoItems"> <!-- add unordered list element and add class of "todoItems" for selecting purposes -->
    <% for(let i=0; i < items.length; i++) {%> <!-- ejs used to start a for loop -->
        <li class="item"> <!-- add list item with a class of "item" for selecting purposes -->
            <% if(items[i].completed === true) {%> <!-- ejs used to add a conditional inside of the for loop; it is checking to see if an item in an array with a completed property is true -->
                <span class='completed'><%= items[i].thing %></span> <!-- creating a span with a class of 'completed' for selection purposes; also ejs is added to display the name of the task -->
            <% }else{ %> <!-- ejs to add an else clause to our if statement -->
                <span><%= items[i].thing %></span> <!-- add ejs to display the task name without a class, so it is not 'completed' -->
            <% } %> <!-- ejs to close the else statement -->   
            <span class='fa fa-trash'></span> <!-- span to display the Font Awesome trash can icon -->
        </li> <!-- close list item -->
    <% } %> <!-- ejs to close the for loop -->
    </ul> <!-- close unordered list -->

    <h2>Left to do: <%= left %></h2> <!-- creates a second level heading tag with text and ejs to display the number of tasks left to complete (counts how many tasks have not been flagged as completed)-->

    <h2>Add A Todo:</h2> <!-- creates a second level header -->

    <form action="/addTodo" method="POST"> <!-- create a form with a POST method that when submitted goes to the /addTodo route (the route needs to match the place on the server where it is supposed to go)-->
        <input type="text" placeholder="Thing To Do" name="todoItem"> <!-- create a field where you can input text; the input box displays "Thing To Do" when the box is empty; assigns the name of 'todoItem' which is a unique value we can reference later -->
        <input type="submit"> <!-- gives the form a submit button -->
    </form> <!-- close the form -->
    

    <script src='js/main.js'></script> <!-- linking to main.js which is the client side javascript, located in the js folder inside of the public folder -->
</body> <!-- close the body -->
