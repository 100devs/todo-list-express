<body>
    <h1>Todo List: </h1> <!--todo list title-->
    <ul class="todoItems"> <!--created unordered list -->
    <% for(let i=0; i < items.length; i++) {%> <!-- for loop EJS for length of items-->
        <li class="item">
            <% if(items[i].completed === true) {%>
                <span class='completed'><%= items[i].thing %></span>
            <% }else{ %>
                <span><%= items[i].thing %></span>
            <% } %>    
            <span class='fa fa-trash'></span>
        </li>
    <% } %>
    </ul>

    <h2>Left to do: <%= left %></h2> <!--heading for tasks left todo-->

    <h2>Add A Todo:</h2> <!--heading for tasks to add todo-->

    <form action="/addTodo" method="POST"> <!--Create a form with a POSt method that goes to the /addTodo route-->
        <input type="text" placeholder="Thing To Do" name="todoItem">
        <input type="submit">
    </form>
    

    <script src='js/main.js'></script> <!--link main.js-->
</body>
</html>
