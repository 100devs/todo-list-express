    <!--This may be a typo-->
    <!DOCTYPE html>
    <!--This may be a typo-->
    <html lang="en">
      <!--This may be a typo-->
      <head>
        <!--This may be a typo-->
        <meta charset="UTF-8" />
        <!--This may be a typo-->
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!--This may be a typo-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!--This may be a typo-->
        <title>Document</title>
        <!--This may be a typo-->
      </head>
      <!--This may be a typo-->
      <body>
        <!--main section for content displayed-->
        <h1>Todo List:</h1>
        <!--Main title displayed on page-->
        <ul class="todoItems">
          <!--Create unordered list with a class of todoItems-->
          <% for(let i=0; i < items.length; i++) {%>
          <!--Use EJS to start a for loop-->
          <li class="item">
            <!--Create list item with a class of item-->
            <% if(items[i].completed === true) {%>
            <!--EJS If statement that checks to see if the current item is completed-->
            <span class="completed"><%= items[i].thing %></span>
            <!--Inline element with a class of completed and EJS that displays the name of the item-->
            <% }else{ %>
            <!--EJS for the Else clause of our if statement-->
            <span><%= items[i].thing %></span>
            <!--Inline element containing EJS to display item without completed class-->
            <% } %>
            <!--EJS to close the Else statement-->
            <span class="fa fa-trash"></span>
            <!--Inline element with a class of fa fa-trash to display a font awesome icon-->
          </li>
          <!--Closing tag for our list item-->
          <% } %>
          <!--EJS to close the for loop-->
        </ul>
        <!--Closing tag for our unordered list-->

        <h2>Left to do: <%= left %></h2>
        <!--Creates a second level heading tag with text and EJS to display the current item count-->

        <h2>Add A Todo:</h2>
        <!--Creates a second level heading tag with text-->

        <form action="/addTodo" method="POST">
          <!--Opening form tag with a POST method and an action attribute which routes the form submission to /addTodo-->
          <input type="text" placeholder="Thing To Do" name="todoItem" />
          <!--Creates a text input field with default text inside it that disappears when the user starts typing. The input field is given a name attribute for later reference-->
          <input type="submit" value="Add" />
          <!--Creates a submit input field which allows the form to be submitted-->
        </form>
        <!--Closing tag for our form-->

        <script src="js/main.js"></script>
        <!--Links to our client side JS in the public -> js folder-->
      </body>
      <!--This may be a typo-->
    </html>
    <!--This may be a typo-->
  </body>
  <!--Closing body tag-->
</html>
<!--Closing html tag-->
