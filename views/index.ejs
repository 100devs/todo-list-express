    <!DOCTYPE html>
    <!--This may be a typo-->
    <html lang="en">
    <!--This may be a typo-->

    <head>
        <!--This may be a typo-->
        <meta charset="UTF-8">
        <!--This may be a typo-->
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <!--This may be a typo-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!--This may be a typo-->
        <title>Document</title>
        <!--This may be a typo-->
    </head>
    <!--This may be a typo-->

    <body>
        <!--main section for content displayed-->
        <h1>Todo List: </h1>
        <!--main title displayed on the page-->
        <ul class="todoItems">
            <!--create unordered list and assign class to the list-->
            <% for(let i=0; i < items.length; i++) {%>
                <!-- Use EJS to start a FOR loop ==> loop through items array -->
                <li class="item">
                    <!-- create a list item with a class of item -->
                    <% if(items[i].completed===true) {%>
                        <!--EJS to check if an item in a array with a completed property is true-->
                        <span class='completed'>
                            <%= items[i].thing %>
                                <!--Creating an inline element with a class and adding EJS to display the name of the task-->
                        </span>
                        <% }else{ %>
                            <!--EJS for the else clause of our if statement-->
                            <span>
                                <%= items[i].thing %>
                                    <!--adding EJS to display the name of the task with NO class-->
                            </span>
                            <% } %>
                                <!--EJS to close the else statement-->
                                <span class='fa fa-trash'></span>
                                <!--Display Font Awesome Icon of trash can inside a span-->
                </li>
                <!--EJS to close the list item-->
                <% } %>
                    <!--EJS to close the for loop-->
        </ul>
        <!--EJS to close the unordered list-->

        <h2>Left to do: <%= left %>
                <!--Creates a second level heading tag with text and using EJS to display a variable showing how many tasks are left to complete-->
        </h2>

        <h2>Add A Todo:</h2>
        <!--Create a second level header-->

        <form action="/addTodo" method="POST">
            <!--Create a form with a POST method that goes to the /addTodo route-->
            <input type="text" placeholder="Thing To Do" name="todoItem">
            <!--create an input box that accepts text with default text inside of it before you type anything. The input box is given a name for later references.-->
            <input type="submit">
            <!--create a submit button-->
        </form>


        <script src='js/main.js'></script>
        <!--link to our main.js file-->
    </body>

    </html>