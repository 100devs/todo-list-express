    <!--main section for content that is displayed Also possible typo-->
    <!DOCTYPE html>
    <!--this is a typo-->
    <html lang="en">
    <!--this is a typo-->

    <head>
        <!--this is a typo-->
        <meta charset="UTF-8">
        <!--this is a typo-->
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <!--this is a typo-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!--this is a typo-->
        <title>Document</title>
        <!--this is a typo-->
    </head>
    <!--this is a typo-->

    <body>
        <!--main section for content that is displayed-->
        <h1>Todo List: </h1>
        <!--main heading/ title to be displayed on page-->
        <ul class="todoItems">
            <!--creates unordered list and assigns class to list-->
            <% for(let i=0; i < items.length; i++) {%>
                <!--Use EJS to start a for loop-->
                <li class="item">
                    <!--list item with a class of item-->
                    <% if(items[i].completed===true) {%>
                        <!--EJS to check if an item in an array with a completed property is true-->
                        <span class='completed'>
                            <!--Creating an inline element span section with a class of completed-->
                            <%= items[i].thing %>
                                <!--Adding EJS to display the name of the task-->
                        </span>
                        <% }else{ %>
                            <!--EJS for the else clause of the if statement-->
                            <span>
                                <%= items[i].thing %>
                                    <!--Added EJS to display the name of the task with NO CLASS-->
                            </span>
                            <% } %>
                                <!--EJS to close the else statement-->
                                <span class='fa fa-trash'></span>
                                <!--Creating a span with a class of fa fa-trash for favIcons-->
                </li>
                <!--Closing tag for the list items-->
                <% } %>
                    <!--EJS closing tag closing the for loop-->
        </ul>
        <!--Closing the unordered list-->

        <h2>Left to do: <%= left %>
        </h2>
        <!--Creating a heading level 2 tag with text and using EJS to display a variable showing how many tasks left to complete-->

        <h2>Add A Todo:</h2>
        <!--Another level 2 heading with a title-->

        <form action="/addTodo" method="POST">
            <!--Creating a form with an action of addTodo to submit a POST method that will add task to the /addTodo route-->
            <input type="text" placeholder="Thing To Do" name="todoItem">
            <!--Creating input box that accepts text with default text with a name for the input box-->
            <input type="submit">
            <!--Gives the form a submit button-->
        </form>
        <!--Closing tag for the form-->


        <script src='js/main.js'></script>
        <!--This is linking the main.js to the index.ejs file located in the public folder-->
    </body>
    <!--Closing body tag-->

    </html>
    <!--Closing html tag-->