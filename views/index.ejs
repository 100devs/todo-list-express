    <meta charset="UTF-8"><!--defines characters to use-->
    <meta http-equiv="X-UA-Compatible" content="IE=edge"><!--browser compatibility-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!--define initial viewport scaling-->
    <title>Document</title><!--head that goes in tab description-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"><!--use this stylesheet-->
